
/******************************
* SuperFish Menu SKIN 
******************************/
.sf-menu {
	line-height:	18px;
	margin-bottom:	0px;
	float:          none;
}
.sf-menu li {
	float:			left;
	position:		relative;
}
.sf-menu ul {
	width:			15em; /* left offset of submenus need to match (see below) */
}
ul.sf-menu li li:hover ul,
ul.sf-menu li li.sfHover ul {
	left:			15em; /* match ul width */
}
ul.sf-menu li li li:hover ul,
ul.sf-menu li li li.sfHover ul {
	left:			15em; /* match ul width */
}
.sf-menu li:hover ul,
.sf-menu li.sfHover ul {
	left:			0;
	top:			28px; /* match top ul list item height */
}
.sf-menu a, .sf-menu a:visited {
	padding: 		5px 10px;
	text-decoration:none;
	color: #000;
}
a > .sf-sub-indicator {
	top:			9px;
}

.sf-menu ul {
	border-bottom:none;
}
.sf-menu li ul {
	z-index:999999;
}
.sf-menu li a {
	border-left:none;
	border-top:none;
	border-bottom:none;
}
.sf-menu li li a {
	border-top:none;
	border-right:none;
}
.sf-menu li.listLink {
	margin-left:-30px;
	margin-top:28px;
	padding:14px;
	padding-left:15px;
	width:0px;
	background-color:#fff;
}
.sf-menu li.listLink:hover {
	background-color:#fff;
}
.sf-sub-indicator {
	padding-right:10px;
	right:0px;
}
.sf-menu li.selected a > .sf-sub-indicator {
	background-position: -10px -100px; /* arrow hovers for modern browsers*/
	padding-right:0px;
	right:10px;
}
.sf-menu li, .sf-menu li li , .sf-menu li li li {
	background:		#fff;
}

.sf-menu>li>a>.sf-sub-indicator {
	top:4px;
}
.sf-menu>li>a {
	padding-bottom:0px;
	padding-top:0px;
}
.sf-menu>li {
	padding-bottom:5px;
	padding-top:5px;
}

/**
adds for making work the navBar
*/
.sf-navbar {
	height:	28px;
	overflow:visible;
	border:none;
}

.sf-navbar a.sf-with-ul {
	padding-right:0px;
}
.sf-navbar .sf-sub-indicator {
	position:static;
	display:inline;
	margin-left:5px;
	margin-right:5px;
}
.sf-navbar li {
	margin-bottom:0px;
	border:none;
}
.sf-navbar li ul {
	position:absolute;
	left:0px;
	top:60px;
	border:none;
	border-bottom:1px solid #fff;
}
.sf-navbar li li {
	margin-bottom:0px;
}
.sf-navbar li {
	position:		static;
}
.sf-navbar a {
	position:static;
}

.sf-navbar li ul {
	width:			100%; /*IE6 soils itself without this*/
}
.sf-navbar li li {
	position:		relative;
}
.sf-navbar li li ul {
	width:			13em;
}
.sf-navbar li li li {
	width:			100%;
}
.sf-navbar li ul {
	height:0px;
	visibility:hidden;
}
.sf-navbar li.selected {
	margin-bottom:-1px;
	margin-top:3px;
	padding-top:2px;
}
.sf-navbar li.selected:hover li.selected,
.sf-navbar li.selected li.selected {
	margin-bottom:-1px;
	margin-top:3px;
	padding-top:2px;
}
.sf-navbar ul li {
	width:			auto;
	float:			left;
}
.sf-navbar  li.selected:hover ul,
.sf-navbar  li.selected ul {
	height:28px;
	visibility:visible;
	position:absolute;
	left:0;
	top:58px;
	z-index:1;
}

.sf-navbar li:hover ul
{
	position:absolute;
	width:auto;
	display:table;
	margin-left:-50px;
	visibility:visible;
	height:28px;
	left:auto;
	top:58px;
}
.sf-navbar  li:hover ul li {
	padding-top:4px;
	padding-bottom:4px;
}
.sf-navbar  li.selected:hover ul li {
	padding-top:0px;
	padding-bottom:0px;
}
.sf-navbar  li:hover ul a,
.sf-navbar  li:hover ul a:visited {
	padding:1px 20px;
	margin-right:-1px;
}
.sf-navbar  li.selected:hover ul a,
.sf-navbar  li.selected:hover ul a:visited {
	border-right:none;
	padding:5px 8px;
	margin-right:0px;
}
.sf-navbar  li.selected:hover ul{
	display:inline;
	width:100%;
	left:0px;
	border:none;
	margin-left:0px;
}

.sf-navbar li li a,
.sf-navbar li li a:visited
{
	color:#000;
	border:none;
}
.sf-navbar li.selected a
{
	color:#000;
	font-weight:bold;
	background-color:transparent;
}
.sf-navbar li.selected.with-ul a
{
	color:#fff;
}

.sf-navbar li.selected li.selected a
{
	color:#000;
	font-weight:bold;
	padding-top:0px;
	padding-bottom:5px;
	background-color:transparent;
}
.sf-navbar li li,
.sf-navbar li, li, li {
	background-color:transparent;
}

#userMenu {
	float:left;
}
#userMenu .home, #userMenu .back {
	padding-left:10px;
	padding-right:10px;
	padding-top:3px;
	padding-bottom:3px;
}
#userMenu .home a, #userMenu .back a {
	border:1px solid #000;
	font-weight:bold;
	padding:1px 8px;
}

#userMenu li.changeOwnName a {
	border:none;
	font-size:x-small;
	padding-right:0px;
}

#userMenu li.changeOwnName:hover, 
#userMenu #userFeedbackOnSystem a:hover, 
#userMenu #userFeedbackOnSystem a:active, 
#userMenu #userFeedbackOnSystem a:focus,
#userMenu li.changeOwnName a:hover, 
#userMenu li.changeOwnName a:active, 
#userMenu li.changeOwnName a:focus {
	background-color:transparent;
}

#userMenu #userFeedbackOnSystem.disabled, #userMenu #userFeedbackOnSystem a.disabled {
	background-color:transparent;
	cursor:default;
	color:#ccc;
}
#userMenu #userFeedbackOnSystem.disabled:hover, 
#userMenu #userFeedbackOnSystem a.disabled:hover,
#userMenu #userFeedbackOnSystem a.disabled:active,
#userMenu #userFeedbackOnSystem a.disabled:focus
{
	background-color:transparent;
	cursor:default;
	color:#ccc;
	text-decoration:none;
}

#navigationBar {
	-moz-user-select: none;
	-khtml-user-select: none;
	user-select: none;
}
#navigationBar .navL{
	float:left;
	height:28px;
	margin-right:-12px;
	border-left-width:0px;
	border-right-width:0px;
	border-top-width:0px;
	padding-left:28px;
	background:transparent no-repeat url('../../images/gui/navigate-left-shadow.png') left center;
	cursor:pointer;
}
#navigationBar .navR {
	margin-left:-12px;
	float:left;
	height:28px;
	border-left-width:0px;
	border-right-width:0px;
	border-top-width:0px;
	padding-left:28px;
	cursor:pointer;
	background:transparent no-repeat url('../../images/gui/navigate-right-shadow.png') right center;
}
#navigationBar .navR.D {
	background:transparent no-repeat url('../../images/gui/navigate-right-shade.png') 0 center;
}
#navigationBar .navL.D {
	background:transparent no-repeat url('../../images/gui/navigate-left-shade.png') 0 center;
}
#navigateMenu {
	width:10000px;
}
#NMContainer {
	float:left;
	width:630px;
	overflow:hidden;
}

